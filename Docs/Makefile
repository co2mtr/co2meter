## #######################################
##  SETTINGS
## #######################################

## #######################################
##  VARIABLES
## #######################################

PREFIX_userinfo=Benutzerinfos_CO2Meter

## #######################################
##  RULES
## #######################################

all: userinfo

userinfo:
	pandoc -t latex -V geometry:"top=2cm, bottom=2cm, left=2cm, right=2cm" -o $(PREFIX_userinfo).pdf $(PREFIX_userinfo).md

userinfo-slides:
	pandoc -t beamer -o $(PREFIX_userinfo)-slides.pdf $(PREFIX_userinfo).md

clean:
	@rm -f *~ *.aux *.log
